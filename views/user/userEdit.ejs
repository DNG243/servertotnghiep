<!DOCTYPE html>
<html lang="en">

<head>
    <title>User List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
        }

        .main-content {
            margin-right: 0;
        }

        .sidebar-sticky {
            padding-top: 20px;
        }

        .sidebar-sticky img {
            margin-bottom: 10px;
        }

        .sidebar-sticky h5,
        .sidebar-sticky p {
            margin: 0;
            /* Loại bỏ margin mặc định */
        }

        .nav-item {
            margin-bottom: 5px;
            /* Khoảng cách giữa các mục */
        }

        /* Thêm vào phần <style> của bạn */
        .nav-link {
            margin-bottom: 10px;
            /* Khoảng cách giữa các nút */
            padding: 10px;
            border-radius: 5px;
            color: #fff;
            text-align: left;
            /* Căn lề về trái */
        }

        .nav-link .nav-link-icon {
            margin-right: 10px;
        }

        .nav-link:hover {
            background-color: #fff;
            /* Màu nền khi hover */
            color: #000;
            /* Màu chữ khi hover */
        }

        .logout-btn {
            margin-left: auto;
        }

        .logout-btn button:hover {
            background-color: #343a40;
            /* Màu nền khi hover */
            color: #fff;
            /* Màu chữ khi hover */
        }

        /* Thêm vào phần <style> của bạn hoặc tạo một file CSS riêng */
        .rounded-top-header {
            border-radius: 10px;
        }

        /* Thêm vào phần <style> của bạn hoặc tạo một file CSS riêng */
        .pagination-container {
            border-top: 1px solid #dee2e6;
            padding-top: 10px;
        }

        .pagination {
            margin: 0;
        }

        .page-item {
            display: inline-block;
            margin-right: 5px;
        }

        .page-link {
            cursor: pointer;
        }

        .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
</head>

<body class="bg-secondary">
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">User List</a>
        <div class="logout-btn">
            <button class="btn btn-outline-light my-2 my-sm-0" type="button">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block bg-dark sidebar text-light">
                <div class="sidebar-sticky text-center">
                    <div class="mb-4">
                        <img src="https://static.vecteezy.com/system/resources/previews/019/896/008/original/male-user-avatar-icon-in-flat-design-style-person-signs-illustration-png.png"
                            alt="Avatar" class="rounded-circle" width="80" height="80" />
                        <h5 class="mt-3">Admin</h5>
                        <p>Xin chào mừng trở lại</p>
                        <hr class="bg-light" />
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="http://localhost:3000/user/listuser" class="nav-link">
                                <i class="fas fa-user nav-link-icon"></i> Quản lý người dùng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="http://localhost:3000/product/listproduct" class="nav-link">
                                <i class="fas fa-box nav-link-icon"></i> Quản lý sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="http://localhost:3000/order/listorder" class="nav-link">
                                <i class="fas fa-file-alt nav-link-icon"></i> Quản lý đơn đặt
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="http://localhost:3000/card/cardlist" class="nav-link">
                                <i class="fas fa-credit-card nav-link-icon"></i> Quản lý thẻ
                                nạp
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-star nav-link-icon"></i> Quản lý đánh giá
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-chart-bar nav-link-icon"></i> Thống kê
                            </a>
                        </li>
                        <!-- Thêm các mục sidebar khác nếu cần -->
                    </ul>
                </div>
            </nav>

            <!-- Content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
                <div class="rounded-top-header mb-3 p-3 bg-light text-dark mt-3">
                    <h3>Chỉnh sửa người dùng</h3>
                  </div>
                <div class="p-3 bg-white rounded">
                    <% if (message) { %>
                        <div class="alert alert-success">
                            <%= message %>
                        </div>
                        <% } %>

                            <form action="/user/edit/<%= user.id %>" method="POST">
                                <div class="form-group">
                                    <label for="username">Tên người dùng:</label>
                                    <input type="text" id="username" name="username" value="<%= user.username %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="text" id="email" name="email" value="<%= user.email %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="phone">Số điện thoại:</label>
                                    <input type="text" id="phone" name="phone" value="<%= user.phone %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="address">Địa chỉ:</label>
                                    <input type="text" id="address" name="address" value="<%= user.address %>"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="user_type">Quyền:</label>
                                    <select id="user_type" name="user_type" class="form-control">
                                        <option value="true" <%=user.user_type=='true' ? 'selected' : '' %>>admin
                                        </option>
                                        <option value="false" <%=user.user_type=='false' ? 'selected' : '' %>>user
                                        </option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Xác nhận</button>
                            </form>

                            <a href="/user/listuser" class="btn btn-secondary mt-3">Quay lại danh sách người dùng</a>
                </div>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script src="https://kit.fontawesome.com/ececb9b28f.js" crossorigin="anonymous"></script>
    <script>
        // Chọn tất cả các checkbox khi checkbox "Select All" được chọn
        document
            .getElementById("selectAll")
            .addEventListener("change", function () {
                var checkboxes = document.querySelectorAll(
                    'tbody input[type="checkbox"]'
                );
                checkboxes.forEach(function (checkbox) {
                    checkbox.checked = event.target.checked;
                });
            });
    </script>
</body>

</html>